{
  "name": "creative-boilerplate",
  "version": "1.0.0",
  "author": "Cl√°udio Mindouro",
  "license": "ISC",
  "private": true,
  "scripts": {
    "development": "webpack serve --progress --config webpack.config.development.js",
    "build": "webpack --progress --config webpack.config.build.js",
    "start": "npm run development",
    "lint": "npm-run-all --parallel lint:*",
    "lint:scripts": "eslint src/**/*.js --max-warnings=0",
    "lint:styles": "stylelint src/**/*.{css,scss} --allow-empty-input",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint:scripts --fix"
    ],
    "src/**/*.{css,scss}": [
      "npm run lint:styles --fix"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.14.2",
    "@babel/preset-env": "7.14.2",
    "autoprefixer": "10.2.5",
    "babel-loader": "8.2.2",
    "clean-webpack-plugin": "4.0.0-alpha.0",
    "copy-webpack-plugin": "8.1.1",
    "css-loader": "5.2.4",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "file-loader": "6.2.0",
    "glslify-loader": "2.0.0",
    "husky": "6.0.0",
    "image-minimizer-webpack-plugin": "2.2.0",
    "imagemin-gifsicle": "7.0.0",
    "imagemin-jpegtran": "7.0.0",
    "imagemin-optipng": "8.0.0",
    "imagemin-svgo": "9.0.0",
    "lint-staged": "11.0.0",
    "mini-css-extract-plugin": "1.6.0",
    "npm-run-all": "4.1.5",
    "postcss-loader": "5.3.0",
    "prettier": "2.3.0",
    "raw-loader": "4.0.2",
    "sass": "1.32.13",
    "sass-loader": "11.1.1",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-recess-order": "2.4.0",
    "stylelint-config-standard": "22.0.0",
    "stylelint-prettier": "1.2.0",
    "webpack": "5.37.0",
    "webpack-cli": "4.7.0",
    "webpack-dev-server": "3.11.2",
    "webpack-merge": "5.7.3"
  }
}
